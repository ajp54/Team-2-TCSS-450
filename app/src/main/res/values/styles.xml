
<resources>
    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orangeColorPrimary</item>
        <item name="colorPrimaryDark">@color/orangeColorPrimaryDark</item>
        <item name="colorAccent">@color/orangeColorAccent</item>
    </style>

    <style name="Theme.App.BlueLight" parent="Base.Theme.App">
        <item name="colorPrimary">@color/blueLightColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueLightColorPrimaryDark</item>-
        <item name="colorAccent">@color/blueLightColorAccent</item>
    </style>

    <style name="Theme.App.BlueDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/blueDarkColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueDarkColorPrimaryDark</item>-
        <item name="colorAccent">@color/blueDarkColorAccent</item>
    </style>

    <!-- This is a MaterialDesignTheme. Required when using Material Components -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/chatPrimaryColor</item>
        <item name="colorPrimaryDark">@color/chatPrimaryDarkColor</item>
        <item name="colorAccent">@color/chatSecondaryColor</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>

